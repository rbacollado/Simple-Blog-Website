<%- include('partials/header.ejs'); -%>
    <h1> <%= contentTitle  %> </h1>

    <form action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" name="postTitle" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea class="form-control" name="postContent" rows="5" cols="30"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>
    
<%- include('partials/footer.ejs'); -%>